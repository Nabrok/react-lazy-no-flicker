{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "./lib",
		"target": "ES2015",
		"declaration": true,
		"declarationDir": "./types",
		"moduleResolution": "node",
		"allowJs": true,
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"__fixtures__/*": [ "__fixtures__/*" ],
			"*": [ "src/*" ]
		}
	},
	"include": [
		"src/**/*",
		"__fixtures__/**/*",
		"__tests__/**/*"
	]
}
